<div class='wrapper'>
  <%= link_to 'Back', game_path(@game)%>
  <%= form_for @player, url: game_players_path(@game) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
