<div class='wrapper'>
  <div class='wrapper'>
    <div class='navbar'>
      <% if user_signed_in? %>
        <%= link_to 'Edit profile', edit_user_registration_path %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% end %>
    </div>
  <p><%= link_to 'back to My Games', my_games_path %></p>
  <h3>Shower date: <%= @game.event_date.to_formatted_s(:long) %></h3>
  <h2>In honor of <%= @game.honoree_name %></h2>
  <h3>Hosted by:
    <% @hosts.each do |host| %>
    <%= host.name %>
    <% end %>
  </h3>

  <% if @game.require_password %>
    <p>
      <em> Answers will be password protected </em>
    </p>
  <% end %>

  <ul>
    <li><%= link_to 'Play', play_game_path(@game) %></li>
    <li><%= link_to 'Edit', edit_game_path(@game) %></li>
    <li><%= link_to 'Delete', game_path(@game), method: :delete, data: {confirm: 'Are you sure?'} %></li>
  </ul>

  <h4>Player overview</h4>
  <p><%= link_to 'Add player', new_game_player_path(@game) %></p>

  <ol>
    <% @players.each do |player| %>
      <li>
        <%= link_to player.name, edit_player_path(player) %> |
        <%= player.email %>
      </li>
    <% end %>
  </ol>
</div>


