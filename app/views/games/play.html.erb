
<script>
var password = '<%= @game.password %>';
</script>

<header>
  <h1>Name That Baby!</h1>
  <h3>Created especially for <%= @honoree_name %>'s baby shower on <%= @event_date %></h3>
</header>

<div class='instructions'>
  <h4>Using the answer sheet, write down which guest belongs to each baby photo.</h4>
</div>

<div id='players_wrapper'>
  <% @players.each do |player| %>
    <div class='question'>
      <div class='img-wrapper'>
        <div class='flip'>
          <div class='card'>
            <div class='face front'>
              <div class='number'><span><%= @players.index(player)+1 %></span></div>
              <%= image_tag("https://s3.amazonaws.com/#{player[:aws_s3_bucket]}/#{player[:aws_s3_key]}") %>
            </div>
            <div class='face back'>
              <%= player[:player].name %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <br class='clear'/>
</div>
<div class='form-container'>
  <div class='pw-form'>
    <i class="fa fa-key unlock-answers"></i>
    <i class='fa fa-unlock lock-answers' style = "display: none"></i>
    <input type='password' id='pw' style = "display: none" placeholder="Password"/>
  </div>
  <div>
    <%= link_to 'quit', game_path(@game) %>
  </div>
  <br class='clear'/>
</div>







